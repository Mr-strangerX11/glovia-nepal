{
  "buildCommand": "cd frontend && npm run build",
  "installCommand": "npm install && cd backend && npm install && cd ../frontend && npm install",
  "outputDirectory": "frontend/.next",
  "framework": "nextjs",
  "env": [
    "NEXT_PUBLIC_API_URL"
  ],
  "regions": ["pdx1"],
  "functions": {
    "api/**": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
